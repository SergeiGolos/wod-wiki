{
  "compilerOptions": {
    "composite": true,
    "skipLibCheck": true,
    "module": "ESNext",
    "moduleResolution": "bundler",
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "sourceMap": true,
    "types": ["node"],
    "target": "ES2020"
  },
  "include": [
    "vite.config.ts",
    "vitest.*.config.js",
    "vitest.*.config.ts",
    ".storybook/**/*",
    "scripts/**/*",
    "setup-testing.js",
    "postcss.config.js",
    "tailwind.config.js"
  ]
}
